<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YeuCauChuyenKhoanActivity"
    android:padding="20dp"
    android:background="@mipmap/nen_admin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dangnhap_dangky_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yeu_cau_chuyen_khoan_user"
            android:textSize="25sp"/>
        <GridView
            android:id="@+id/gridYeuCauChuyenKhoan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:backgroundTint="#448AFF"
            android:layout_height="wrap_content"
            android:text="@string/Back"/>
    </LinearLayout>
</LinearLayout>