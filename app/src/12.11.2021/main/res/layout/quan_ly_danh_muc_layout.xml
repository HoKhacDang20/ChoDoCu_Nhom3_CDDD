<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLyDanhMucActivity"
    android:orientation="vertical"
    android:background="@mipmap/nen_admin"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <GridView
            android:id="@+id/danhMucGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgDanhMuc"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/anh_trang"
                    android:layout_marginBottom="20dp"/>
                <EditText
                    android:id="@+id/edtTenDanhMuc"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="@string/danh_muc_hint"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <Button
                    android:id="@+id/btnChooseFromGallery"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#536DFE"
                    android:text="@string/choose_from_gallery"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnOpenCamera"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#536DFE"
                    android:text="@string/open_camera"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnAddDanhMuc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#536DFE"
                android:textSize="11sp"
                android:text="@string/them_danh_muc"
                android:layout_marginRight="5dp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnXoaDanhMuc"
                android:layout_width="100dp"
                android:backgroundTint="#536DFE"
                android:textSize="11sp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/xoa_danh_muc"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnSuaDanhMuc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textSize="11sp"
                android:backgroundTint="#536DFE"
                android:text="@string/sua_danh_muc"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/btnBack"
            android:textAllCaps="false"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#536DFE"
            android:text="@string/Back"/>
    </LinearLayout>
</LinearLayout>